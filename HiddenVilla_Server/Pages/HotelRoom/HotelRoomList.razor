@page "/hotel-room"

@using Models
@using Business.Repository.IRepository
@inject IHotelRoomRepository HotelRoomRepository

<div class="row mt-4">
    <div class ="col-8">
        <h4 class="card-title text-info">Hotel Room's'</h4>
    </div>
    <div class="col-3 offset-1">
        <NavLink href="hotel-room/create" class="btn-info form-control">Add New Room</NavLink>
    </div>
    <div class="row mt-4">
        <div class="row mt-4">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Occupancy</th>
                        <th>Rate</th>
                        <th>Sqr Feet</th>
                        <th>                            
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if(HotelRooms.Any())
                    {
                        foreach(var room in HotelRooms)
                        {
                            <tr>
                                <td>@room.Name</td>
                                <td>@room.Occupancy</td>
                                <td>@room.RegularRate</td>
                                <td>@room.SqFt</td>
                                <td>
                                    <NavLink href="@($"/hotel-room/edit/{room.Id}")" class="btn btn-primary"> Edit Room </NavLink>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No Records Found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@code {
    private IEnumerable<HotelRoomDTO> HotelRooms { get; set; } = new List<HotelRoomDTO>();

    protected override async Task OnInitializedAsync()
    {
        HotelRooms = await HotelRoomRepository.GetAllHotelRooms();
    }
}
